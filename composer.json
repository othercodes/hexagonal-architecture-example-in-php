{
  "name": "othercode/hexagonal-architecture-example",
  "description": "Small example of Hexagonal Architecture.",
  "minimum-stability": "stable",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Unay Santisteban",
      "email": "usantisteban@othercode.io"
    }
  ],
  "require": {
    "php": "^8.2",
    "doctrine/orm": "^3",
    "doctrine/dbal": "^4",
    "symfony/cache": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "OtherCode\\": "src/"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest --coverage --coverage-clover=coverage.xml --log-junit=test.xml",
    "db:initialize": "php bin/doctrine orm:schema-tool:update --force --dump-sql"
  },
  "require-dev": {
    "pestphp/pest": "^2.34",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
