#!/usr/bin/env php
<?php

declare(strict_types=1);

require_once __DIR__."/../vendor/autoload.php";

use Doctrine\ORM\Tools\Console\ConsoleRunner;
use Doctrine\ORM\Tools\Console\EntityManagerProvider\SingleManagerProvider;

use function OtherCode\Shared\Infrastructure\Persistence\Doctrine\provideEntityManger;

$configuration = require 'configuration.php';

ConsoleRunner::run(new SingleManagerProvider(provideEntityManger($configuration['persistence']['database'])));
